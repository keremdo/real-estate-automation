@model IEnumerable<AppUser>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a asp-controller="Users" asp-action="Create" class="btn btn-outline-secondary mt-3">Kullanıcı Ekle</a>
<hr>
<table class="table table-sm table-bordered mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Eposta</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Fullname</td>
                <td>@u.Email</td>
                <td>
                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@u.Id" class="btn btn-outline-secondary">Güncelle</a>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Emin misiniz')" style="display: inline-block;">
                        <input type="hidden" name="id" value="@u.Id">
                        <button type="submit" class="btn btn-outline-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>