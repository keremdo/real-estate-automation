@model EditViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Edit User</h2>
<hr>
<form asp-action="Edit" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" name="Id" value="@Model.Id">
    <div class="mb-3">
        <label asp-for="Fullname"></label>
        <input asp-for="Fullname" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="card card-body">
        <div class="mb-3">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control">
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            Roller
        </div>
        <div class="card-body">
            @foreach(var role in ViewBag.Roles){
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="SelectedRoles"
                     value="@role" 
                     id="@role" 
                     >
                     
                    <label for="@role" class="form-check-label">@role</label>
                </div>
            }
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary">GÃ¼ncelle</button>
</form>