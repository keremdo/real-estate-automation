@model IEnumerable<Portfolio>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table">
    <thead>
      <tr>
        <th scope="col">NO</th>
        <th scope="col">Başlık</th>
        <th scope="col">Açıklama</th>
        <th scope="col">İşlemler</th>
      </tr>
    </thead>
    <tbody>
    @foreach(var i in Model)
    {
        <tr>
            <th>@i.PortfolioId</th>
            <th>@i.Title</th>
            <th>@i.Description</th>
            <th><a asp-controller="Portfolio" asp-action="Details" asp-route-id="@i.PortfolioId" class="btn btn-outline-secondary">Detay</a></th>
        </tr>
    }   
    </tbody>
  </table>
  <a asp-controller="Portfolio" asp-action="Create" class="btn btn-outline-secondary">Yeni İlan Ekle</a>