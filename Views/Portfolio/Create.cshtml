@model Portfolio
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">

</div>
<form asp-controller="Portfolio" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group mt-3">
      <label asp-for="Title">Başlık</label>
      <input asp-for="Title" class="form-control"  >
    </div>
    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Resim</label>
        <input asp-for="ImageUrl" type="file" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Description">Açıklama</label>
        <textarea asp-for="Description" class="form-control"  rows="4"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-secondary">Kaydet</button>
</form>