@model Portfolio
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 mt-3">
        <div class="card border">
            <div class="card-body">
                <form asp-controller="Portfolio" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="PortfolioId">
                    <p>
                        @Model.Title - İlan kaldırılacak emin misin?
                    </p>
                    <a asp-controller="Portfolio" asp-action="Index" class="btn btn-outline-secondary">Geri Dön</a>
                    <button type="submit" class="btn btn-outline-warning">Kaldır</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>